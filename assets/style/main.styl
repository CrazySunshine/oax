//.application--dark .datatable thead th.column.sortable.active
//.application--dark .datatable thead th.column.sortable.active i
//  color #fff

.list__tile__title
.icon
  transition none

.application--dark tbody tr:hover
  background-color: $grey.darken-3 !important

.input-group__hint > *:last-child
.input-group__hint > *:last-child > *:last-child
.input-group__hint > *:last-child > *:last-child > *:last-child
.md > *:last-child
.md > *:last-child > *:last-child
.md > *:last-child > *:last-child > *:last-child
.md > *:last-child > *:last-child > *:last-child > *:last-child
  margin-bottom 0

.nowrap
  white-space nowrap

//.overlay--active + .overlay--active:last-child
//  z-index 5

.app--tabs .tabs__items
  border-width 0 !important

pre
  font-family "Roboto Mono", monospace
  font-size 12px

@media all and (max-width: $grid-breakpoints.sm)
  .layout
    margin 0

@media $display-breakpoints.xs-only
  .toolbar__content > :not(.btn):last-child
    margin-right 7px

.application--light .input-group--text-field.input-group--solo
  background-color $body-bg-light

.application--dark .input-group--text-field.input-group--solo
  background-color $body-bg-dark

.relative
  position relative

.toolbar--scroll
  overflow auto
  height 'calc(100vh - %s)' % $toolbar-height

  @media $mobile-portrait
    height 'calc(100vh - %s)' % $toolbar-mobile-portrait-height

  @media $mobile-landscape
    height 'calc(100vh - %s)' % $toolbar-mobile-landscape-height

@media all and (max-width: 600px)
  .overlay
    display none

code
  color: inherit

.stretch
  align-content stretch

.relative
  position relative

a
  text-decoration none

.main-description.markdown
  max-width 100%
  overflow hidden

.main-description.markdown
  > p
  > ul
  > ol
    max-width 888px
  > pre
  > table
    max-width 100%

//@media $display-breakpoints.xl-only
//  min-width 888px

#webpack-hot-middleware-clientOverlay
  font-size 150% !important

#oax .no-animation
  *
    transition none !important

::selection
  background-color: rgba($theme.primary, .25)

.application--dark ::selection
  color: #fff

#oax .datatable__progress th
  height 1px
  display none

#oax .btn--short
#oax .btn--short > *
  min-width 72px

.app-example
  .link
    cursor: pointer

  .click
    cursor: pointer
    opacity: .64

  ul
    padding: 0 0 0 16px
  ul li
    list-style none
    position relative

  .expander
    position absolute
    margin-left -8px

//.dialog__content
//  z-index: 6 !important

.table__no--overflow.table__overflow
  width: fit-content
  overflow-x: visible
  overflow-y: visible

#oax
  .gpu
    transform: translate3d(0,0,0)
    backface-visibility: hidden

  .table-stripes
    td
      padding 8px 8px 10px 8px
      vertical-align top

    border-collapse collapse

    tr:nth-child(odd)
      background-color: rgba(#000, $material-light.divider-percent/2)

  .application--dark .table-stripes
    tr:nth-child(odd)
      background-color: rgba(#fff, $material-dark.divider-percent*2)

#oax .tabs__item
  padding 0 18px

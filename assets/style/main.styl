.hover--block:hover
  background $material-twelve-percent-dark
  cursor pointer

pre.app-pre
  background lighten($material-twelve-percent-dark, 50%)
  border 1px solid $material-twelve-percent-dark
  border-radius 6px !important
  max-height calc((100vh - 64px) / 4)
  overflow auto
  scroll auto

.input-group__hint
  transition none !important

//.dialog__content
//  z-index 11

@media $display-breakpoints.md-and-up
  .ma-3-md
    margin: 24px

@media $display-breakpoints.sm-and-down
  .pa-0-sm
    padding: 0 !important

  .mtb-3-sm
    margin: 16px 0

@media $display-breakpoints.sm-only
  #oax main > .container
    padding: 0

@media $display-breakpoints.xs-only
  #oax
    .container
      padding 0

    .pa-3-sm
      padding 0 !important

    .plr-3-sm
      padding-left 16px !important
      padding-right 16px !important

    .container.grid-list-xl
      padding 16px

    .container.grid-list-xl > .layout > .flex
      padding 8px

.application--dark .menu__content
  background-color #212121


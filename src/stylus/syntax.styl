.hljs
  display: block
  overflow-x: auto

.hljs-comment,
.hljs-quote
  color: #999
  font-style: italic

.hljs-keyword,
.hljs-selector-tag,
.hljs-subst
  color: #333
  font-weight: bold

.hljs-number,
.hljs-literal,
.hljs-variable,
.hljs-template-variable,
.hljs-tag .hljs-attr
  color: $theme.info

.hljs-string,
.hljs-doctag
  color: $theme.success

.hljs-title,
.hljs-section,
.hljs-selector-id
  color: $theme.error
  font-weight: bold

.hljs-subst
  font-weight: normal

.hljs-type,
.hljs-class .hljs-title
  color: $theme.info
  font-weight: bold

.hljs-tag,
.hljs-name,
.hljs-attribute
  color: $theme.info
  font-weight: normal

.hljs-regexp,
.hljs-link
  color: $theme.info

.hljs-symbol,
.hljs-bullet
  color: $theme.warning

.hljs-built_in,
.hljs-builtin-name
  color: $theme.info

.hljs-meta
  color: #999
  font-weight: bold

.hljs-deletion
  color: $theme.error

.hljs-addition
  color: $theme.success

.hljs-emphasis
  font-style: italic

.hljs-strong
  font-weight: bold

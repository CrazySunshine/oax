// https://github.com/JSlote/kbd.css/tree/master
#oax
  .key
    display: inline-block
    padding: 2px 5px 3px 4px
    margin: 0 5px 0 5px
    text-align center

    font-size: 80%
    position: relative
    top: -2px
    color: rgba(0, 0, 0, .78)
    //text-shadow: 0 -1px 0px rgba(255, 255, 255, .66)

    letter-spacing 0.06em
    line-height 1
    font-weight 700
    text-decoration: none
    box-shadow: inset 2px -2px 2px -1px rgba(255, 255, 255, 0.96)
    cursor: default
    border: 1px solid rgba(0, 0, 0, .06)
    border-radius: 4px
    border-bottom-left-radius: 5px
    border-bottom-right-radius: 5px
    background: lighten(#ddd, 30%)
    //background: radial-gradient(ellipse at top right, $theme.primary 10%, $theme.primary 100%)

    path
      fill: rgba(0, 0, 0, .78) !important

  .key::before,
  .key::after
    content: ''
    left: -2px
    right: -3px
    top: 2px
    bottom: -4px
    border-radius: 4px
    border-bottom-left-radius: 6px
    border-bottom-right-radius: 6px

  .key::before
    position absolute
    z-index: -1
    border: 0.75px solid darken(#ddd, 35%)
    box-shadow: 0 1px 1px rgba(0, 0, 0, .26)
    background: radial-gradient(circle 25px at -10px 5px, #fff 10%, #ddd 60%, darken(#ddd, 25%) 80%)

  .key::after
    position absolute
    z-index: -2
    background: radial-gradient(ellipse 10px 20px at top right, #888 0%, #aaa 70%, #ccc 100%)

  .key:hover
    top: 1px
    box-shadow: inset 0 -4px 4px -2px rgba(200, 200, 200, .5)

  .key:hover::before,
  .key:hover::after
    padding-bottom 1px
    top: -2px
    bottom: -2px
    border-radius: 6px

  .key:hover::before
    box-shadow: inset 0 1px 6px 0 rgba(0, 0, 0, .96)

  .keys, .keyboard
    z-index: 1
    position: relative
    font-size: 18px
    padding: 8px
    font-family: Roboto, sans-serif

  .keyboard .key
    margin: 5px 6px


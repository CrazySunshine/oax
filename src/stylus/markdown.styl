.markdown-body
  code, pre
    font-weight: normal !important

  -ms-text-size-adjust: 100%
  -webkit-text-size-adjust: 100%
  font-size: 15px
  line-height: 1.5
  word-wrap: break-word

  a
    -webkit-text-decoration-skip: objects
    background-color: transparent
    text-decoration: none
    &:hover
      text-decoration: underline
    &:not([href])
      color: inherit
      text-decoration: none
  strong
    font-weight: 600
  h1
    border-bottom: 1px solid #eaecef
    font-size: 32px
    font-weight: 600
    margin: 0.67em 0
    padding-bottom: 0.3em
  img
    background-color: #fff
    border-style: none
    box-sizing: content-box
    max-width: 100%
  svg
    &:not(:root)
      overflow: hidden
  hr
    box-sizing: content-box
    height: 0
    overflow: visible
    height: 0
    margin: 15px 0
    overflow: hidden
    background: transparent
    border: 0
    border-bottom: 1px solid #dfe2e5
    height: 0.25em
    padding: 0
    margin: 24px 0
    background-color: #e1e4e8
    border: 0
    border-bottom-color: #eee
    &::before
      display: table
      content: ""
    &::after
      display: table
      clear: both
      content: ""
  input
    font: inherit
    margin: 0
    overflow: visible
    font-family: inherit
    font-size: inherit
    line-height: inherit
  [type="checkbox"]
    box-sizing: border-box
    padding: 0
  *
    box-sizing: border-box
  table
    border-spacing: 0
    border-collapse: collapse
    display: block
    width: 100%
    overflow: auto
    th
      font-weight: 600
    tr
      background-color: rgba(128, 128, 128, 0.08)
      border-top: 1px solid #c6cbd1
      &:nth-child(2n)
        background-color: rgba(128, 128, 128, 0.04)
  h2
    border-bottom: 1px solid #eaecef
    font-size: 24px
    font-weight: 600
    padding-bottom: 0.3em
  h3
    font-size: 20px
    font-weight: 600
  h4
    font-size: 16px
    font-weight: 600
  h5
    font-size: 14px
    font-weight: 600
  h6
    color: #6a737d
    font-size: 12px
    font-weight: 600
  p
    margin-bottom: 10px
    margin-top: 0
  blockquote
    border-left: 0.25em solid #dfe2e5
    color: #6a737d
    margin: 0
    padding: 0 1em
    & > :first-child
      margin-top: 0
    & > :last-child
      margin-bottom: 0
  dd
    margin-left: 0
  code
    //background-color: rgba(27, 31, 35, 0.05)
    border-radius: 3px
    font-family: "Roboto Mono", monospace
    font-size: 12px
    margin: 0
    padding: 0
    padding-bottom: 0.2em
    padding-top: 0.2em
  pre
    font: 12px "Roboto Mono", monospace
    margin-bottom: 0
    margin-top: 0
    word-wrap: normal
    & > code
      padding: 0
      margin: 0
      font-size: 100%
      word-break: normal
      white-space: pre
      background: transparent
      border: 0
    code
      display: inline
      max-width: auto
      padding: 0
      margin: 0
      overflow: visible
      line-height: inherit
      word-wrap: normal
      background-color: transparent
      border: 0
  &::before
    display: table
    content: ""
  &::after
    display: table
    clear: both
    content: ""
  & > *:first-child
    margin-top: 0 !important
  & > *:last-child
    margin-bottom: 0 !important
  .anchor
    float: left
    padding-right: 4px
    margin-left: -20px
    line-height: 1
    &:focus
      outline: none
  kbd
    background-color rgba(#888, .8)
  kbd + kbd
    margin-left 4px
  li
    & > p
      margin-top: 16px
    & + li
      margin-top: .25em
  dl
    padding: 0

    dt
      font-size: 1em
      font-style: italic
      font-weight: 600
      margin-top: 16px
      padding: 0
    dd
      margin-bottom: 16px
      padding: 0 16px
  :checked
    & + .radio-label
      border-color: #0366d6
      position: relative
      z-index: 1

.markdown-body a:active,
.markdown-body a:hover
  outline-width: 0

.markdown-body code,
.markdown-body kbd,
.markdown-body pre
  font-family: "Roboto Mono", monospace
  font-size: 1em

.markdown-body td,
.markdown-body th
  padding: 0

.markdown-body h1,
.markdown-body h2,
.markdown-body h3,
.markdown-body h4,
.markdown-body h5,
.markdown-body h6
  font-weight: 600
  line-height: 1.25
  margin-bottom: 16px
  margin-top: 24px

.markdown-body ul,
.markdown-body ol
  margin-bottom: 0
  margin-top: 0
  padding-left: 2em

.markdown-body ol ol,
.markdown-body ul ol
  list-style-type: lower-roman

.markdown-body ul ul ol,
.markdown-body ul ol ol,
.markdown-body ol ul ol,
.markdown-body ol ol ol
  list-style-type: lower-alpha

.markdown-body p,
.markdown-body blockquote,
.markdown-body ul,
.markdown-body ol,
.markdown-body dl,
.markdown-body table,
.markdown-body pre
  margin-bottom: 16px
  margin-top: 0

.markdown-body ul ul,
.markdown-body ul ol,
.markdown-body ol ol,
.markdown-body ol ul
  margin-bottom: 0
  margin-top: 0

.markdown-body table th,
.markdown-body table td
  border: 1px solid #dfe2e5
  padding: 6px 13px

.markdown-body code::before,
.markdown-body code::after
  content: "\00a0"
  letter-spacing: -.2em

.markdown-body pre
  background-color: $material-light.background
  border: 1px solid $material-light.dividers
  border-radius: 4px
  font-size: 14px
  line-height: 20px
  overflow: auto
  padding: 16px

.markdown-body pre code::before,
.markdown-body pre code::after
  content: normal
